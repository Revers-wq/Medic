<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button37"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:outlineAmbientShadowColor="#1A6FEE"
        android:outlineSpotShadowColor="#1A6FEE"

        android:shadowColor="#1A6FEE"
        android:text="Добавить пациента"
        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="@+id/button34"
        app:layout_constraintStart_toStartOf="@+id/button34"
        app:layout_constraintTop_toBottomOf="@+id/button34"
        app:strokeColor="#1A6FEE" />

    <Button
        android:id="@+id/button36"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_marginTop="120dp"
        android:text="Подтвердить"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/button34"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button34"
        app:layout_constraintTop_toBottomOf="@+id/button34" />

    <Button
        android:id="@+id/button34"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:text="Тицкая Елена"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Выбор пациента"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button34"
        app:layout_constraintEnd_toEndOf="@+id/button34"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button34" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button34"
        app:layout_constraintEnd_toEndOf="@+id/button34"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button34"
        app:srcCompat="@drawable/cascas" />
</androidx.constraintlayout.widget.ConstraintLayout>